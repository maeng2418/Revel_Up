// views/layout.pug

doctype html
html
	head
		meta(charset='utf-8')
		title RevelUP
		style(type='text/css') html, body {height:100%;}
		link(rel='stylesheet', href="/stylesheets/style.css", type="text/css")
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Montserrat:700&display=swap", type="text/css")
		script(src='/javascripts/upload.js')
	body
		.upsideBar
			h1.mainTitle
				a(style="color:#000000;") Revel UP
			h3.upsideMenu
				if name
					h5 
						span#author #{name}
					h5 님 환영합니다.
					a#upsideMenu(href="/main") Home
					a#upsideMenu(href="/register") Resiter
					a#upsideMenu(href="/list") list
					a#upsideMenu(href="/logout") Log Out
				else
					a#upsideMenu(href="/") Home
		.container
			block content
			block main
			block register
			block complete
			block detail
			block book
			block list
		.footer
			a.ask(href="./ask.html") 문의하기
			a.privacy(href="./privacy.html") 개인정보 처리방침